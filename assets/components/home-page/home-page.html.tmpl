<linky-home-page>
  <header>
    <h1 slot="site-title" id="site-title" >{{ .User.SiteTitle }}</h1>
    <button slot="rename-site" name="rename-site" class="rename-site">Rename</button>
  </header>
  <main>
    <menu slot="links" id="links">
    {{ range.Links }}
      {{ template "link.html.tmpl" .}}
    {{ end }}
    </menu>
  </main>
  <nav>
    <button slot="edit" name="edit">Edit</button>
    <button slot="add" name="add">Add</button>
    {{ if not .IsDefaultUser }}
      <form id="logout" method="post" class="inline-form" action="/logout">
        <input type="submit" name="logout" value="Logout 👋">
      </form>
    {{ end }}
    {{ if .IsDefaultUser }}
      <form method="post" class="inline-form" action="/login">
        <input type="text" name="email" placeholder="you@example.com">
        <input type="submit" name="login" value="Login/Signup 🚪">
      </form>
    {{ end }}
    {{ if not .IsDefaultUser }}
    <div class="user-options">
      <form class="flex-form" method="post" enctype="multipart/form-data" action="/opml">
        <label for="file">Import OPML:</label>
        <input type="file" id="file" accept=".xml,.opml" name="file">
        <input type="submit" value="Upload OPML File ⬆️">
      </form>
      <form class="flex-form" method="get" action="/opml">
        <label for="file">Export OPML:</label>
        <input type="submit" value="Download OPML File ⬇️">
      </form>
    </div>

    {{ end }}

  </nav>
  <linky-loading>🔄</linky-loading>

  <template id="tmpl-link">
  {{ template "link.html.tmpl" .EmptyLink }}
  </template>
</linky-home-page>