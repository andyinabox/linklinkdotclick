{{ define "link.html.tmpl" }}
<linky-link {{ if .ID }}data-id="{{ .ID }}"{{ end }}>
  <a
    slot="link"
    class="link"
    href="{{ .SiteUrl }}"
    target="_blank"
    >{{ .SiteName }}</a
  >
  <span slot="count" class="count">{{ if eq .HideUnreadCount false }}{{ if .UnreadCount }}{{ .UnreadCount }}{{ else if eq .FeedUrl "" }}?{{ end }}{{ end }}</span>
  <form slot="edit-menu" class="edit-menu">
    <fieldset><label for="site-url">Site:</label> <input name="site-url" type="text" value="{{ .SiteUrl}}" disabled><button name="edit-site-url">Edit</button></fieldset>
    <fieldset><label for="feed-url">Feed:</label> <input name="feed-url" type="text" value="{{ .FeedUrl}}" disabled><button name="edit-feed-url">Edit</button></fieldset>
    <fieldset>
    <button name="delete" class="delete">Delete</button>
    <button name="rename" class="rename">Rename</button>
    <input name="hide-unread-count" type="checkbox" {{ if .HideUnreadCount }}checked{{ end }}><label for="hide-unread-count">Hide unread count</label>
    </fieldset>
  </form>
</linky-link>
{{ end }}
