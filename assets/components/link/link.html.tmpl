{{ define "link.html.tmpl" }}
<linky-link {{ if .ID }}data-id="{{ .ID }}"{{ end }}>
  <a
    slot="link"
    class="link"
    href="{{ .SiteUrl }}"
    target="_blank"
    >{{ .SiteName }}</a
  >
  <span slot="count" class="count">{{ .UnreadCount }}</span>
  <menu slot="edit" class="edit">
    <button name="delete" class="delete">delete</button>
  </menu>
</linky-link>
{{ end }}
