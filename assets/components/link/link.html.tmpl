{{ define "link.html.tmpl" }}
<linky-link {{ if .ID }}data-id="{{ .ID }}"{{ end }}>
  <linky-evt-btn
    data-event-name="delete-link"
    {{ if .ID }}data-e-id="{{ .ID }}"{{ end }}
    class="delete"
    slot="delete"
    >delete</linky-evt-btn>
  <a
    slot="link"
    class="link"
    href="{{ .SiteUrl }}"
    target="_blank"
    >{{ .SiteName }}</a
  >
  <span slot="count" class="count">{{ .UnreadCount }}</span>
</linky-link>
{{ end }}
