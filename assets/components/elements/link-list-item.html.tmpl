<li is="link-list-item" class="link-item" {{ if .ID }}data-id="{{ .ID }}"{{ end }}>
  <a
    slot="link"
    class="link-item-link"
    data-href="{{ .SiteUrl }}"
    href="/links?id={{ .ID }}&url={{ .SiteUrl }}"
    target="_blank"
    >{{ .SiteName }}</a
  >
  <span slot="count" class="link-item-count">{{ if eq .HideUnreadCount false }}{{ if .UnreadCount }}{{ .UnreadCount }}{{ else if eq .FeedUrl "" }}?{{ end }}{{ end }}</span>
  {{ template "edit-link-form.html.tmpl" . }}

</li>
