<!DOCTYPE html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ .User.SiteTitle }}</title>
    <link rel="stylesheet" href="/static/main.css" />
    <meta name="description" content="{{ .Site.Description }}" />

    <meta property="og:title" content="{{ .Site.OgTitle }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ .Site.Url }}" />
    <meta property="og:image" content="{{ .Site.Images.OgImage }}" />
    <meta property="og:image:alt" content="{{ .Site.Images.OgImageAlt }}" />

    <link rel="icon" href="{{ .Site.Images.FavIcon }}" sizes="any" />
    <link rel="apple-touch-icon" href="{{ .Site.Images.AppleTouchIcon }}" />
    <link rel="manifest" href="{{ .Site.Manifest }}">
  </head>

  <body>
    <linky-site>
      <header>
        <h1 slot="site-title" id="site-title" >{{ .User.SiteTitle }}</h1>
        <button slot="rename-site" name="rename-site" class="rename-site">Rename</button>
      </header>
      <main>
        <menu slot="links" id="links">
        {{ range.Links }}
          {{ template "link.html.tmpl" .}}
        {{ end }}
        </menu>
      </main>
      <nav>
        <button slot="edit" name="edit">Edit</button>
        <button slot="add" name="add">Add</button>
        {{ if not .IsDefaultUser }}
          <form id="logout" method="post" action="/logout">
            <input type="submit" name="logout" value="Logout ðŸ‘‹">
          </form>
        {{ end }}
        {{ if .IsDefaultUser }}
          <form method="post" action="/login">
            <input type="text" name="email" placeholder="you@example.com">
            <input type="submit" name="login" value="Login/Signup ðŸšª">
          </form>
        {{ end }}
      </nav>
    </linky-site>

    <template id="tmpl-link">
     {{ template "link.html.tmpl" .DummyLink }}
    </template>
    <script src="/static/main.js"></script>
  </body>
</html>
