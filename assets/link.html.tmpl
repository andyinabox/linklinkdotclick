{{ define "link.html.tmpl" }}
<linky-link {{ if .ID }}data-id="{{ .ID }}"{{ end }}>
  <a
    slot="link"
    class="link"
    href="{{ .SiteUrl }}"
    target="_blank"
    >{{ .SiteName }}</a
  >
  <span slot="count" class="count">{{ if .UnreadCount }}{{ .UnreadCount }}{{ end }}</span>
  <nav slot="edit-menu" class="edit-menu">
    <button name="delete" class="delete">Delete</button>
    <button name="rename" class="rename">Rename</button>
  </nav>
</linky-link>
{{ end }}
